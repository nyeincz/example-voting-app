pipeline {
    
    agent{
        docker{
            image 'node:16.6.1-alpine'
        }
    }
    stages {
        stage('Build'){
            when{
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app..'
                dir('result'){
                sh 'npm install' 
                }
            }
        }
        
        stage('Test') {
            when{
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Tests on result app.'
                 dir('result'){
                sh 'npm install'     
                sh 'npm test' 
                }
            }
        }
    }
    post{
        always{
            echo 'Pipeline for result is completed.'
        }
    }
}
